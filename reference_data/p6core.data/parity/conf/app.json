[
  {
    "name"              : "platform6_instance",
    "script"            : "app.js",
    "log_date_format"   : "YYYY-MM-DD HH:mm Z",
    "merge_logs"        : false,
    "watch"             : true,
    "max_restarts"      : 10,
    "exec_interpreter"  : "node",
    "exec_mode"         : "fork_mode",
    "env":
    {
      "NODE_ENV"        : "production", // tell the client we're in production environment
      "RPC_HOST"        : "172.13.0.10", // eth JSON-RPC host the default is 8545
      "RPC_PORT"        : "8545", // eth JSON-RPC port
      "LISTENING_PORT"  : "30303", // eth listening port (only used for display)
      "INSTANCE_NAME"   : "noname", // whatever you wish to name your node
      "CONTACT_DETAILS" : "www.amalto.com", // add your contact details here if you wish (email/skype)
      "WS_SERVER"       : "ws://p6chain00.amalto.io:3001", // path to eth-netstats WebSockets api server
      "WS_SECRET"       : "123", // WebSockets api server secret used for login
      "VERBOSITY"       : 3
    }
  }
]

